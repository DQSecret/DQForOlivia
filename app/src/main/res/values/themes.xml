<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DQForOlivia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="BoldTextStyle" parent="TextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="BoxStyle1" parent="TextStyle">
         <item name="android:layout_marginLeft">10dp</item>
         <item name="android:layout_marginRight">10dp</item>
         <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="CardStyle1">
         <item name="android:layout_marginLeft">10dp</item>
         <item name="android:layout_marginRight">10dp</item>
         <item name="android:layout_centerInParent">true</item>
         <item name="android:background">#ff0000</item>
         <item name="android:padding">10dp</item>

    </style>

    <style name="marginStyle">
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>