<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dqddu">

    <!-- 监听用户截屏所需, 详见[Screenshots] -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 请求网络所需 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- WebActivity 需要使用 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 拍照权限, 详见[ImagePicker] -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".base.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DQForOlivia"
        tools:ignore="AllowBackup"
        tools:targetApi="n">

        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".base.WebActivity" />

        <activity android:name=".screenshots.ScreenshotsActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/screenshots -->
                <data
                    android:host="@string/intent_host"
                    android:path="/screenshots"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".coroutines.example.ui.NetworkExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/network-example -->
                <data
                    android:host="@string/intent_host"
                    android:path="/network-example"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".motionlayout.example.MotionLayoutExampleActivity">
            <intent-filter>
