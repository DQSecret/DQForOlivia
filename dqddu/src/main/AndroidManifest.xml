        </activity>

        <activity android:name=".results.ImagePickerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/image-picker -->
