<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dqddu">

    <!-- 监听用户截屏所需, 详见[Screenshots] -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 请求网络所需 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".base.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DQForOlivia"
        tools:ignore="AllowBackup">

        <!-- 外部的一个 WebView 的库: 方便打开链接 -->
        <activity
            android:name="com.thefinestartist.finestwebview.FinestWebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="sensor"
            android:theme="@style/FinestWebViewTheme.Light" />

        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".screenshots.ScreenshotsActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/screenshots -->
                <data
                    android:host="@string/intent_host"
                    android:path="/screenshots"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".coroutines.example.ui.NetworkExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/network-example -->
                <data
                    android:host="@string/intent_host"
                    android:path="/network-example"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".motionlayout.example.MotionLayoutExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/motion-layout-example -->
                <data
                    android:host="@string/intent_host"
                    android:path="/motion-layout-example"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".motionlayout.example.MotionLayoutExample2Activity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/motion-layout-example-2 -->
                <data
                    android:host="@string/intent_host"
                    android:path="/motion-layout-example-2"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".coroutines.flow.state.StateFlowExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/state-flow-example -->
                <data
                    android:host="@string/intent_host"
                    android:path="/state-flow-example"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".coroutines.flow.shared.SharedFlowExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/shared-flow-example -->
                <data
                    android:host="@string/intent_host"
                    android:path="/shared-flow-example"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity android:name=".motionlayout.practice.MotionLayoutPracticeActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- eg: dqforolivia://www.dqforolivia.com/motion-layout-practice -->
                <data
                    android:host="@string/intent_host"
                    android:path="/motion-layout-practice"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>
    </application>
</manifest>