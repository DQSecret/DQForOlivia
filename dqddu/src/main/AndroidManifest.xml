                <!-- eg: dqforolivia://www.dqforolivia.com/motion-layout-practice -->
                <data
                    android:host="@string/intent_host"
                    android:path="/motion-layout-practice"
                    android:scheme="@string/intent_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".motionlayout.practice.MotionLayoutPractice2Activity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
