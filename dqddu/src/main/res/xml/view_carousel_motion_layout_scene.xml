<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 开始状态 -->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/tv_item_first">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="parent" />
        </Constraint>
        <Constraint android:id="@id/tv_item_second">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="parent" />
        </Constraint>
        <Constraint android:id="@id/tv_item_third">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="parent" />
        </Constraint>
        <Constraint android:id="@id/tv_item_another">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="parent" />
        </Constraint>
    </ConstraintSet>

    <!-- 结束状态 -->
    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/tv_item_first">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="parent" />
        </Constraint>
        <Constraint android:id="@id/tv_item_second">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="parent" />
        </Constraint>
        <Constraint android:id="@id/tv_item_third">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="parent" />
        </Constraint>
        <Constraint android:id="@id/tv_item_another">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="parent" />
        </Constraint>
    </ConstraintSet>

    <!-- 动画 -->
    <Transition
        android:id="@+id/trans_carousel"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="8000"
        app:motionInterpolator="linear">
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="10"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_first"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="20"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_first"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="30"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_first"
                app:percentX="1" />

            <KeyPosition
                app:framePosition="20"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_second"
                app:percentX="0" />

            <KeyPosition
                app:framePosition="30"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_second"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="40"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_second"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_second"
                app:percentX="1" />

            <KeyPosition
                app:framePosition="40"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_third"
                app:percentX="0" />

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_third"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="60"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_third"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="70"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_third"
                app:percentX="1" />

            <KeyPosition
                app:framePosition="60"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_another"
                app:percentX="0" />

            <KeyPosition
                app:framePosition="70"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_another"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="80"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_another"
                app:percentX="0.5" />

            <KeyPosition
                app:framePosition="90"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/tv_item_another"
                app:percentX="1" />
        </KeyFrameSet>
    </Transition>
</MotionScene>