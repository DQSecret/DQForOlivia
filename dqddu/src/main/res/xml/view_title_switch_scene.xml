<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="200">
        <!--        <KeyFrameSet>-->
        <!--            <KeyAttribute-->
        <!--                android:alpha="0"-->
        <!--                motion:framePosition="50"-->
        <!--                motion:motionTarget="@id/iv_topic" />-->
        <!--            <KeyAttribute-->
        <!--                android:alpha="0"-->
        <!--                motion:framePosition="50"-->
        <!--                motion:motionTarget="@id/tv_title" />-->
        <!--            <KeyAttribute-->
        <!--                android:alpha="0"-->
        <!--                motion:framePosition="50"-->
        <!--                motion:motionTarget="@id/tv_subtitle" />-->
        <!--        </KeyFrameSet>-->
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@id/iv_topic">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Layout
                android:layout_marginTop="22dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint
            android:id="@id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Layout
                motion:layout_constraintEnd_toEndOf="@id/tv_title"
                motion:layout_constraintStart_toStartOf="@id/tv_title"
                motion:layout_constraintTop_toBottomOf="@id/tv_title" />
            <PropertySet android:alpha="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@id/iv_topic">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Layout
                motion:layout_constraintBottom_toTopOf="@id/tv_subtitle"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintVertical_chainStyle="packed" />
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint
            android:id="@id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Layout
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/tv_title" />
            <PropertySet android:alpha="1" />
        </Constraint>
    </ConstraintSet>
</MotionScene>