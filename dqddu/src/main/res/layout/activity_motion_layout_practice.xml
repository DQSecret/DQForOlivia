    <ImageView
        android:id="@+id/iv_action_bar_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_action_bar_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@id/guide_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电影"
        android:textColor="#66FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guide_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_action_bar_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_action_bar_share_24"
        app:layout_constraintBottom_toBottomOf="@id/guide_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp" />

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@id/guide_base_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_action_bar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_movie_name_zh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="电影中文名"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:layout_constraintTop_toTopOf="@id/iv_movie_poster" />

    <TextView
        android:id="@+id/tv_movie_name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电影英文名"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_movie_name_zh"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_name_zh" />

    <TextView
        android:id="@+id/tv_movie_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画 / 喜剧 / 奇幻"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_movie_details"
        app:layout_constraintStart_toStartOf="@id/tv_movie_name_zh"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_name_en"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_movie_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="2019-07-26 中国大陆上映 /2110分钟"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/toggle_group"
        app:layout_constraintStart_toStartOf="@id/tv_movie_name_zh"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_label" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_base_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:singleSelection="true"
        tools:checkedButton="@id/btn_wish">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_wish"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="想看"
            android:textColor="@color/selector_wish_txt_color"
            android:textSize="14sp"
            app:icon="@drawable/ic_favorite_16"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconTint="@color/selector_wish_icon_color"
            app:rippleColor="#40EC407A"
            app:strokeColor="@color/selector_wish_stroke_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_seen"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="看过"
            android:textColor="@color/selector_seen_txt_color"
            android:textSize="14sp"
            app:icon="@drawable/ic_star_16"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconTint="@color/selector_seen_icon_color"
            app:rippleColor="#401565C0"
            app:strokeColor="@color/selector_seen_stroke_color" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_base_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="198dp" />
</androidx.constraintlayout.widget.ConstraintLayout>