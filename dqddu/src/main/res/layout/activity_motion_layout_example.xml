<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.dqddu.motionlayout.example.widgets.SwipeView
        android:id="@+id/view_swipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/view_carousel"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.dqddu.motionlayout.example.widgets.CarouselView
        android:id="@+id/view_carousel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_swipe" />
</androidx.constraintlayout.widget.ConstraintLayout>